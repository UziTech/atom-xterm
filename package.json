{
  "name": "x-terminal",
  "main": "./src/x-terminal",
  "module": "./src/x-terminal",
  "version": "8.0.0",
  "description": "Atom plugin for providing terminals inside your Atom workspace.",
  "keywords": [
    "terminal",
    "xterm",
    "term",
    "console",
    "shell",
    "emulator",
    "pty",
    "tty",
    "comspec",
    "command-line",
    "bash",
    "sh",
    "powershell",
    "cmd"
  ],
  "activationHooks": [
    "core:loaded-shell-environment"
  ],
  "atomTestRunner": "./spec/custom-runner",
  "repository": "https://github.com/UziTech/x-terminal",
  "license": "MIT",
  "engines": {
    "atom": ">=1.23.1 <2.0.0"
  },
  "providedServices": {
    "atom-xterm": {
      "description": "Atom plugin for providing terminals inside your Atom workspace.",
      "versions": {
        "2.0.0": "provideAtomXtermService"
      }
    },
    "platformioIDETerminal": {
      "description": "Run commands and open terminals.",
      "versions": {
        "1.1.0": "providePlatformIOIDEService"
      }
    }
  },
  "dependencies": {
    "deep-object-diff": "^1.1.0",
    "element-resize-detector": "^1.2.1",
    "fs-extra": "^8.1.0",
    "node-pty-prebuilt-multiarch": "^0.9.0",
    "uuid": "^3.4.0",
    "whatwg-url": "^8.0.0",
    "xterm": "^4.4.0",
    "xterm-addon-fit": "^0.3.0",
    "xterm-addon-web-links": "^0.2.1",
    "xterm-addon-webgl": "^0.5.0"
  },
  "devDependencies": {
    "@semantic-release/apm-config": "^8.0.0",
    "atom-jasmine3-test-runner": "^4.4.1",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "jasmine-spec-reporter": "^4.2.1",
    "jsonlint-cli": "^1.0.1",
    "prunk": "^1.3.1",
    "semantic-release": "^17.0.4",
    "style-loader": "^1.1.3",
    "stylelint": "^13.2.0",
    "stylelint-config-standard": "^20.0.0",
    "temp": "^0.9.1"
  },
  "scripts": {
    "eslint": "eslint src/ spec/",
    "jsonlint": "jsonlint-cli keymaps/*.json menus/*.json package.json",
    "lint": "npm run eslint && npm run stylelint && npm run jsonlint",
    "stylelint": "stylelint styles/*.less",
    "atom-test": "atom --test spec",
    "test": "npm run atom-test && npm run lint"
  },
  "deserializers": {
    "AtomXtermModel": "deserializeAtomXtermModel"
  }
}
